{
  \"extends\": \"../../tsconfig.json\",
  \"compilerOptions\": {
    \"target\": \"ES2020\",
    \"module\": \"commonjs\",
    \"moduleResolution\": \"node\",
    \"esModuleInterop\": true,
    \"allowSyntheticDefaultImports\": true,
    \"strict\": true,
    \"skipLibCheck\": true,
    \"forceConsistentCasingInFileNames\": true,
    \"outDir\": \"./dist\",
    \"rootDir\": \"./\",
    \"declaration\": false,
    \"sourceMap\": false,
    \"resolveJsonModule\": true,
    \"lib\": [\"ES2020\"]
  },
  \"include\": [
    \"*.ts\",
    \"../../src/**/*\"
  ],
  \"exclude\": [
    \"node_modules\",
    \"dist\",
    \"**/*.test.ts\"
  ]
}