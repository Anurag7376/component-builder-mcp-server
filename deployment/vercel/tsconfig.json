{
  \"extends\": \"../../tsconfig.json\",
  \"compilerOptions\": {
    \"target\": \"ES2022\",
    \"module\": \"ESNext\",
    \"moduleResolution\": \"Node\",
    \"esModuleInterop\": true,
    \"allowSyntheticDefaultImports\": true,
    \"strict\": true,
    \"skipLibCheck\": true,
    \"forceConsistentCasingInFileNames\": true,
    \"outDir\": \"./dist\",
    \"rootDir\": \"./\",
    \"declaration\": false,
    \"sourceMap\": false,
    \"resolveJsonModule\": true
  },
  \"include\": [
    \"api/**/*\",
    \"../../src/**/*\"
  ],
  \"exclude\": [
    \"node_modules\",
    \"dist\"
  ]
}