{
  "manifest_version": 3,
  "name": "Shadcn Component Generator",
  "version": "1.0.0",
  "description": "Generate Shadcn UI components from any device",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://your-mcp-server.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate Component"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}