# Railway Deployment Configuration

# Environment Variables
NODE_ENV=production
PORT=3001

# Build Settings
NIXPACKS_NODE_VERSION=18
NIXPACKS_BUILD_CMD=npm run build
NIXPACKS_START_CMD=npm start

# Health Check
RAILWAY_HEALTHCHECK_PATH=/health
RAILWAY_HEALTHCHECK_TIMEOUT=300

# Memory and CPU limits (adjust as needed)
RAILWAY_MEMORY_LIMIT=1024
RAILWAY_CPU_LIMIT=1000